@using Portal.Shared.Web
<section class="quicksearch">
    <div class="quicksearch-header">
        <strong>Quick Search</strong>
    </div>
    <div class="quicksearch-fields">
        <MudTextField T="string" 
                      @bind-Value="SearchData.Contact"
                      Label="CONTACT" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Class="quicksearch-field" />
        
        <MudTextField T="string" 
                      @bind-Value="SearchData.Address"
                      Label="ADDRESS" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Class="quicksearch-field" />
        
        <MudTextField T="string" 
                      @bind-Value="SearchData.Suburb" 
                      Label="SUBURB" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Class="quicksearch-field" />
        
        <MudTextField T="string" 
                      @bind-Value="SearchData.CadastralNo"
                      Label="CADASTRAL NO." 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Class="quicksearch-field" />
        
        <MudTextField T="string" 
                      @bind-Value="SearchData.SetoutNo"
                      Label="SETOUT NO." 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      Class="quicksearch-field" />
    </div>
    
    <div class="quicksearch-actions">
        <MudButton Variant="Variant.Filled" 
                   FullWidth="true"
                   OnClick="HandleSearch"
                   Class="search-button"
                   Style="background-color: #b2424d; color: white;">
            Search
        </MudButton>
        
        <MudButton Variant="Variant.Text" 
                   Color="Color.Default" 
                   FullWidth="true"
                   OnClick="ClearFilters"
                   Class="clear-button">
            Clear Filters
        </MudButton>
    </div>
</section>

@code {
    private QuickSearchData SearchData { get; set; } = new();

    private void HandleSearch()
    {
        // TODO: Implement search logic
        // This could trigger a search in the main content area
        // Access search criteria via SearchData.Contact, SearchData.Address, etc.
    }

    private void ClearFilters()
    {
        SearchData.Clear();
    }
}

<style>
    .quicksearch {
        position: fixed;
        top: 75px;
        right: 0px;
        width: 200px;
        background-color: var(--color-white);
        padding: 1.5rem;
        overflow-y: auto;
        z-index: 10;
        border-radius: var(--border-rad);
    }

    .quicksearch-header {
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--color-grey);
    }

    .quicksearch-header strong {
        font-size: 1.1rem;
        color: #1c1b1d;
    }

    .quicksearch-fields {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .quicksearch-field {
        width: 100%;
    }

    .quicksearch-actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .search-button {
        background-color: #b2424d !important;
        color: white !important;
        text-transform: none !important;
        font-weight: 500;
    }

    .search-button:hover {
        background-color: #9a353d !important;
    }

    .clear-button {
        color: #1c1b1d !important;
    }

    @@media (max-width: 768px) {
        .quicksearch {
            display: none;
        }
    }
</style>